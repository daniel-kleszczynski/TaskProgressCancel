<Window x:Class="TaskProgressAndCancel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskProgressAndCancel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <StackPanel Margin="50">
        <Button Command="{Binding SynchronousWorkCommand}">Synchronously</Button>
        <Button Command="{Binding AsynchronousWorkCommand}">Asynchronously</Button>
        <Button Command="{Binding ParallelAsynchronousWorkCommand}">Parallel Asynchronously</Button>
        <ProgressBar x:Name="ProgressBar" Background="{Binding ProgressBarBackground}" Height="20"></ProgressBar>
        <ListView ItemsSource="{Binding Items}"></ListView>
    </StackPanel>
</Window>
